    "pino": "^8.21.0",
    "pino-http": "^11.0.0",
    "typescript": "^5.6.0",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.11",
